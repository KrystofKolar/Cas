<Window x:Class="WpfApp1.CanvasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="CanvasWindow" Height="450" Width="800" Closing="Window_Closing">
    <Canvas>
        <Line X1="10" X2="100" Y1="110" Y2="40" Stroke="Blue" StrokeThickness="4" />
        <Line X1="0" X2="120" Y1="0" Y2="100" Stroke="Red" StrokeThickness="2" />
    </Canvas>
</Window>
